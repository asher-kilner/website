{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true, // allow a partial TypeScript and JavaScript codebase
    },
    "include": [
        "./src/**/*"
    ],
}